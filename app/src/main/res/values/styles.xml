<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AuthMarginHorizontal" >
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="fontFamily">@font/onest_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextAuthStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="fontFamily">@font/onest_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToggleButtonStyle.Selected" parent="ToggleButtonStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MyTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/onest_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewMainStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/onest_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RoundedWhiteButton" parent="Widget.AppCompat.ImageButton">
        <item name="background">@drawable/rounded_white_button_bg</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/next</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>