<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_rc_view"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/disputeHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="280dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/disputeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/disputeImage"
        tools:text="КОГДА НОЖ УСТРОИТСЯ НА РАБОТУ" />

    <TextView
        android:id="@+id/statusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disputeHeaderTV"
        tools:text="Активный" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/statusImageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/statusTV"
        app:layout_constraintStart_toEndOf="@+id/statusTV"
        app:layout_constraintTop_toTopOf="@+id/statusTV"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/disputeDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/statusTV"
        app:layout_constraintTop_toBottomOf="@+id/statusTV"
        tools:text="13.03.25 - 21.03.25" />

    <TextView
        android:id="@+id/disputeBet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/statusTV"
        app:layout_constraintEnd_toStartOf="@+id/disputeImage"
        app:layout_constraintTop_toTopOf="@+id/statusTV"
        tools:text="5000" />

    <TextView
        android:id="@+id/bankHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank"
        app:layout_constraintEnd_toStartOf="@+id/disputeImage"
        app:layout_constraintStart_toEndOf="@+id/disputeDateTV"
        app:layout_constraintTop_toTopOf="@+id/disputeDateTV"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bankHeaderTV"
        app:layout_constraintStart_toStartOf="@+id/disputeBet"
        app:layout_constraintTop_toTopOf="@+id/bankHeaderTV"
        tools:text="100000" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/provor"
        android:layout_marginStart="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/disputeBet"
        app:layout_constraintStart_toEndOf="@+id/disputeBet"
        app:layout_constraintTop_toTopOf="@+id/disputeBet" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/disputeImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gamingcube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>