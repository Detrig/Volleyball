<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rcViewCoachItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    android:background="@drawable/rounded_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/coachImage"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coachNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/onest_bold"
        android:lines="2"
        android:text="Глухарева Мария Руслоновна"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coachImage"
        app:layout_constraintTop_toTopOf="@+id/coachImage" />


    <TextView
        android:id="@+id/phoneNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/onest_bold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:text="89132848100"
        app:layout_constraintStart_toStartOf="@+id/coachNameTV"
        app:layout_constraintTop_toBottomOf="@+id/coachNameTV" />

    <TextView
        android:id="@+id/coachQualification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLines="3"
        android:fontFamily="@font/onest_medium"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        tools:text="Заслуженный тренер Республики Саха (Якутия)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberTV"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberTV" />


</androidx.constraintlayout.widget.ConstraintLayout>